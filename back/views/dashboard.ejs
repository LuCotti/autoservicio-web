<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/public/favicon.ico" type="image/x-icon">
    <title>Dashboard - Bichito de Luz</title>
  </head>
  <body>
    <header>
      <img src="/public/favicon.ico" alt="Logo">
      <h1>Bichito de luz</h1>      
      <h1>Dashboard</h1>
      <h2>Alumnos: COTTI, Luciano Ariel y RODRIGUEZ, Gonzalo Ezequiel</h2>
      <button id="btn-tema">Cambiar tema</button>
    </header>
    <nav>
      <a href="/administrator">Cerrar sesión</a>
    </nav>
    <main>
      <button id="btn-agregar-producto"><a href="/producto/alta">Agregar producto</a></button>
      <section id="section-productos">
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Nombre</th>
              <th>Precio</th>
              <th>Imagen</th>
              <th>Categoría</th>
              <th>Activo</th>
              <th colspan="2">Acciones</th>
            </tr>
          </thead>
          <tbody id="table-body">
            <% productos.forEach((producto) => { %>
              <tr>
                <td id="id-<%= producto.id %>"><%= producto.id %></td>
                <td><%= producto.nombre %></td>
                <td><%= producto.precio %></td>
                <td><img src="<%= producto.imagen %>" alt="producto <%= producto.id %>" width="100"></td>
                <td><%= producto.categoria %></td>
                <td><%= producto.activo %></td>
                <td><button class="modificar" id="btn-modificar-<%= producto.id %>">Modificar</button></td>
                <td><button class="bajar" id="btn-bajar-<%= producto.id %>">Dar de baja</button></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </section>
    </main>
    <script type="module" src="../public/js/dashboard.js"></script>
  </body>
</html>